{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es2017",
		"module": "es2015",
		"lib": ["es2015", "es2016", "es2017", "dom", "es2020","es2019", "ESNext"],
		"strict": true,
		"sourceMap": false,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"rootDir": "./src",
		"baseUrl": ".",
		"outDir": "./dist",
		"declarationDir": "."
	},
	"include": ["./src/", "test", "example"],
	"exclude": ["dist"]
}
